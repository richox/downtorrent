    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*":["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
